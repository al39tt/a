#include <stdio.h>
  
int main(void)
{
 int size = 7; //задаем размер сетки
 for(int x = 0; x < size; x++) // 7 строк
  {
      for(int y = 0; y < size; y++) // 7 стобцов в строке
      {
          if (x == y || y == size - 1 - x ) // задаем 2 диагонали, 1 стр.*1столб.,.... Вторая диагональ имеет вид 1стр.*7столб., 2стр.*6столб.,....
          { 
              printf("*");
          }
          else
          {
              printf(" ");
          }
        }
        printf("\n");
      }
       return 0;
}
