#include <stdio.h>

int main()
{
    int size = 7; // сетка
    for (int x = 1; x <= size; x++)  // строки
    {
      for (int y = 1; y <= size; y++)  // столбцы
       {
       if (x == y || x + y == size + 1) // в сетке значения либо равны, либо имет обратную зависимость
         printf("*");
        else
          printf(" ");
        }
        printf("\n");  
    }
    return 0;
}
